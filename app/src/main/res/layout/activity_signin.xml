<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_ic_bg_blue"
    tools:context=".auth.SigninActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:layout_margin="38dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_dashboard_user"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/jeep" />

        <EditText
            android:id="@+id/username_signin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/style_edittext"
            android:drawableRight="@drawable/ic_full_name"
            android:fontFamily="sans-serif-condensed"
            android:hint="Username / Email"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/pass_signin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/style_edittext"
            android:drawableRight="@drawable/key"
            android:fontFamily="sans-serif-condensed"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/codeLogin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/style_edittext"
            android:drawableRight="@drawable/ic_full_name"
            android:fontFamily="sans-serif-condensed"
            android:hint="Code User"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="15dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

           <Button
                android:id="@+id/btn_signin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/intro_ic_bg_blue"
                android:fontFamily="sans-serif-condensed"
                android:text="LOGIN SEKARANG"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:onClick="goToRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/intro_ic_bg_blue"
            android:fontFamily="sans-serif-condensed"
            android:text="Belum punya akun? Daftar Sekarang juga!"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>